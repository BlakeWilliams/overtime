type Comment {
    id: int64
    body: string
}

type Post {
    id: int64
    # The post body in raw markdown
    body: string
    # All of the comments for this post
    comments: []Comment
}

GET "/api/v1/comments/:commentID" {
    name: GetCommentByID
    returns: Comment
}

# Returns a single post for the given :postID
GET "/api/v1/posts/:postID" {
    name: GetPostByID
    returns: Post
}
